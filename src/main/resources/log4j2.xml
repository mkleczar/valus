<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!--:wa
         Console appender -->
        <Console name="stdout" target="SYSTEM_OUT">
            <!-- Pattern of log message for console appender -->
            <PatternLayout pattern="%d [%-6p] %C{1}.%M(%F:%L) - %m%n"/>
        </Console>

        <!-- File appender -->
        <File name="fout" fileName="target/log/valus.log"
              immediateFlush="false" append="false">
            <!-- Pattern of log message for file appender -->
            <PatternLayout pattern="%d [%-6p] %C{1}.%M(%F:%L) - %m%n"/>
        </File>
        <!--
        <RollingFile name="roll-by-time"
                     fileName="target/log4j2/roll-by-time/app.log"
                     filePattern="target/log4j2/roll-by-time/app.%d{MM-dd-yyyy-HH-mm}.log.gz"
                     ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %p %m%n</Pattern>
            </PatternLayout>
            <TimeBasedTriggeringPolicy/>
        </RollingFile>
        -->
    </Appenders>

    <Loggers>
        <!-- Override log level for specified package -->
        <Logger name="org.mk" level="TRACE"/>

        <Root level="DEBUG">
            <AppenderRef ref="stdout"/>
            <AppenderRef ref="fout"/>
        </Root>
    </Loggers>
</Configuration>